<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.mypage.MyPageWithdrawMoney.MyPageWithdrawMoneyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:paddingBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상금 출금"
                        android:textColor="#2e2e2e"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/bigTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:letterSpacing="-0.02"
                android:textColor="#36364b"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="상금 출금" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="48dp">


                <EditText
                    android:id="@+id/WithdrawPossibleMoney"
                    style="@style/EditThemeGray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="right|center_vertical"
                    android:hint="30,000원"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#a5a9b0"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="10sp"
                    android:text="출금가능액"
                    android:textColor="#36364b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="30dp">


                <EditText
                    android:id="@+id/inputWithdrawMoney"
                    style="@style/EditThemeGray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="right|center_vertical"
                    android:hint="30,000원"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#a5a9b0"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="10sp"
                    android:text="출금금액"
                    android:textColor="#36364b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </FrameLayout>

            <TextView
                android:id="@+id/email_error_msg_login"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/invalidEmailFormat"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="normal"
                android:theme="@style/EditThemeNormal"
                android:visibility="invisible"
                app:drawableLeftCompat="@drawable/ic_icon_16_form_delete_red"
                tools:visibility="visible" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="30dp">


                <EditText
                    android:id="@+id/backChoice"
                    style="@style/EditThemeGray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="right|center_vertical"
                    android:hint="30,000원"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#a5a9b0"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="10sp"
                    android:text="은행"
                    android:textColor="#36364b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="30dp">


                <EditText
                    android:id="@+id/bankNum"
                    style="@style/EditThemeGray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="right|center_vertical"
                    android:hint="30,000원"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#a5a9b0"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="10sp"
                    android:text="계좌번호"
                    android:textColor="#36364b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="30dp">


                <EditText
                    android:id="@+id/bankOwner"
                    style="@style/EditThemeGray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="right|center_vertical"
                    android:hint="30,000원"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#a5a9b0"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="10sp"
                    android:text="예금주"
                    android:textColor="#36364b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/lucida_grande"
                android:text="∙출금 수수료는 500원입니다."
                android:textColor="#36364b"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lucida_grande"
                android:text="∙출금 신청하신 금액은 평일 오후 7시에 출금됩니다."
                android:textColor="#36364b"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_round_gray_300_4dp"
                android:text="출금신청"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                />


        </LinearLayout>

    </ScrollView>


</layout>