<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameMotionlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"             xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.game.GameFragment">

        <FrameLayout
            android:id="@+id/frameLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bg_bottom_round_blue_20">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/viewPagerWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/game_top_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:elevation="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp">


                </RelativeLayout>

            </LinearLayout>
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:fontFamily="@font/lemonmilk_bold"
                android:gravity="center_vertical"
                android:text="MOTOO"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="12dp"
                android:src="@drawable/ic_alram"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/app_bar_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/app_bar" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/gameDateMenuTab"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            android:background="@color/white"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/font_light"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/border_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabIndicatorColor="@color/primary_blue"
            app:tabIndicatorHeight="2dp"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/primary_blue">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:text="오늘"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:text="이전"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:text="진행예정"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:text="참가중"
                android:textSize="16sp"

                android:textStyle="normal" />
        </com.google.android.material.tabs.TabLayout>


        <View
            android:id="@+id/border_view"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/border_light"
            app:layout_constraintTop_toBottomOf="@+id/gameDateMenuTab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/gameDateMenuViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>